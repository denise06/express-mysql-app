{{#extends 'base'}}

{{#block 'content'}}
<div class="d-flex justify-content-between">
    <h1>Actors</h1>
    <div class="d-flex align-items-center">
        <a href="/actor/create" class="btn btn-success btn-sm">Create</a> 
    </div>
</div>

<table class="table">
    <thead>
        <tr>
            <th>Actor ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Last Update</th>
            <th></th>
        </tr>
    </thead>
    {{#each actors}}
        <tr>
            <td>{{this.actor_id}}</td>
            <td>{{this.first_name}}</td>
            <td>{{this.last_name}}</td>
            <td>{{this.last_update}}</td>
            <td><a href="/actor/{{this.actor_id}}/edit" class="btn btn-primary btn-sm">Edit</a>
        </tr>
    {{/each}}
</table>

{{/block}}
{{/extends}}